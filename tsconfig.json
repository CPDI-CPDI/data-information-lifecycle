{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
